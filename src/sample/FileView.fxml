<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane prefHeight="95.0" prefWidth="347.0" styleClass="base" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/2.2">
    <bottom>
        <HBox alignment="TOP_RIGHT" spacing="15.0">
            <children>
                <Button fx:id="btnAccept" defaultButton="true" mnemonicParsing="false" text="Accept"/>
                <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" text="Cancel"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </bottom>
    <stylesheets>
        <URL value="@base.css"/>
    </stylesheets>
    <top>
        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="347.0" spacing="20.0">
            <children>
                <Label styleClass="label--dark" text="New file name" textFill="#dfdfdf" HBox.hgrow="ALWAYS"/>
                <TextField id="textFileFilename" fx:id="textFieldFileName"
                           promptText="script.sql" HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
        </HBox>
    </top>
</BorderPane>
