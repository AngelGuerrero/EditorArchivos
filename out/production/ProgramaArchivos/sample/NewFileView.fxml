<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane prefHeight="95.0" prefWidth="347.0" style="" styleClass="base" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="sample.NewFileController">
  <bottom>
    <HBox alignment="TOP_RIGHT" spacing="15.0">
      <children>
        <Button fx:id="btnAccept" defaultButton="true" mnemonicParsing="false" onAction="#createNewFile" text="Aceptar" />
        <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#closeWindow" text="Cancelar" />
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </HBox>
  </bottom>
  <stylesheets>
    <URL value="@base.css" />
  </stylesheets>
  <top>
    <HBox alignment="CENTER" prefHeight="65.0" prefWidth="347.0" spacing="20.0" style="">
      <children>
        <Label styleClass="label--dark" text="Nombre del archivo:" textFill="#dfdfdf" HBox.hgrow="ALWAYS" />
        <TextField id="textFileFilename" fx:id="textFieldFileName" onKeyReleased="#onTypedTextField" promptText="archivo.sql" HBox.hgrow="ALWAYS" />
      </children>
      <padding>
        <Insets left="20.0" right="20.0" />
      </padding>
    </HBox>
  </top>
</BorderPane>
